<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minWidth="320dp"
    android:minHeight="500dp"
    android:background="@drawable/ic_stop_point_dialog">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Thông tin điểm dừng"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center" />
            <ImageButton
                android:id="@+id/cancel_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_btn_round"
                android:backgroundTint="@android:color/darker_gray"
                android:src="@drawable/ic_delete"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/stop_point_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Tên điểm dừng"/>
                <EditText
                    android:id="@+id/edit_stop_point_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:inputType="textShortMessage"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/my_custom_background"/>

                <TextView
                    android:id="@+id/service_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Loại dịch vụ"/>
                <Spinner
                    android:id="@+id/edit_service_type"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/my_custom_background"/>

                <TextView
                    android:id="@+id/arrive_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Thời gian đến"/>
                <LinearLayout
                    android:id="@+id/edit_arrive_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_arrive_time"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="3"
                        android:background="@drawable/my_custom_background"
                        android:clickable="true"
                        android:focusable="false"
                        android:inputType="none"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:hint="Thời gian"/>
                    <EditText
                        android:id="@+id/edit_arrive_date"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="2"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/my_custom_background"
                        android:clickable="true"
                        android:focusable="false"
                        android:inputType="none"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:hint="Chọn ngày"/>

                    <ImageView
                        android:id="@+id/arrive_at_img"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/ic_calendar" />
                </LinearLayout>

                <TextView
                    android:id="@+id/leave_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Thời gian đi"/>
                <LinearLayout
                    android:id="@+id/edit_leave_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_leave_time"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="3"
                        android:background="@drawable/my_custom_background"
                        android:clickable="true"
                        android:focusable="false"
                        android:inputType="none"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:hint="Thời gian"/>
                    <EditText
                        android:id="@+id/edit_leave_date"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="2"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/my_custom_background"
                        android:clickable="true"
                        android:focusable="false"
                        android:inputType="none"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:hint="Chọn ngày"/>

                    <ImageView
                        android:id="@+id/leave_at_img"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/ic_calendar" />
                </LinearLayout>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Địa chỉ"/>
                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:inputType="textShortMessage"
                    android:background="@drawable/my_custom_background"/>

                <TextView
                    android:id="@+id/province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Tỉnh"/>
                <Spinner
                    android:id="@+id/edit_province"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/my_custom_background"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/min_cost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:text="Chi phí tối thiểu"/>
                        <EditText
                            android:id="@+id/edit_min_cost"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:inputType="number"
                            android:background="@drawable/my_custom_background" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/max_cost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:text="Chi phí tối đa"/>
                        <EditText
                            android:id="@+id/edit_max_cost"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:inputType="number"
                            android:background="@drawable/my_custom_background"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/StopPointBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Thêm"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/ic_button"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
